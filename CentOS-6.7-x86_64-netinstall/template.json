{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/base.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",

      "boot_command": ["<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"],
      "disk_size": 20480,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "411da8c3f66839eef9ae47bf4515cc0b82f2a1dfc7b2d5bde2d203ca7e3220f3",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirror.fairway.ne.jp/centos/6.7/isos/x86_64/CentOS-6.7-x86_64-netinstall.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_timeout": "20m",
      "ssh_username": "vagrant",
      "vboxmanage": [["modifyvm", "{{.Name}}", "--memory", "512"], ["modifyvm", "{{.Name}}", "--cpus", "1"]],
      "virtualbox_version_file": ".vbox_version"
    }
  ]
}
